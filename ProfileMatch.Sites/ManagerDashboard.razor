@page "/manager/dashboard"
@page "/manager/dashboard/{ActiveIndex:int}"
    <AuthorizeView Roles="Manager, Admin">
        <Authorized>
            <MudText Typo="Typo.h5" Color="Color.Primary" Class="mb-4">@L["Manager Dashboard"]</MudText>
            <MudTabs Elevation="1" Rounded="true" PanelClass="mt-6" DisableSliderAnimation="true">
                <MudTabPanel Text=@L["Compare"]><ManagerClosedQuestions /></MudTabPanel>
            </MudTabs>
        </Authorized>
        <NotAuthorized>
            <p>@L["Sorry, this content is restricted."]</p>
        </NotAuthorized>
    </AuthorizeView>