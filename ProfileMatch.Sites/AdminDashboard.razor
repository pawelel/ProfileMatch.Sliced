@page "/admin/dashboard"
<AuthorizeView Roles="Admin">
    <Authorized>
        <MudText Typo="Typo.h5" Color="Color.Primary" Class="mb-4">@L["admindashboard"]</MudText>
        <MudTabs Elevation="1" Rounded="true" PanelClass="mt-6">
            <MudTabPanel Text=@L["Users"]>
                <AdminPeopleList />
            </MudTabPanel>
            <MudTabPanel Text=@L["Departments"]>
                <AdminDepartmentList />
            </MudTabPanel>
            <MudTabPanel Text=@L["Categories"]><AdminCategoryList /></MudTabPanel>
            <MudTabPanel Text=@L["Open questions"]><AdminQuestionList /></MudTabPanel>
            <MudTabPanel Text=@L["Closed questions"]><AdminNoteList /></MudTabPanel>
        </MudTabs>
    </Authorized>
    <NotAuthorized>
        <p>@L["You're not loggged in as Admin."]</p>
    </NotAuthorized>
</AuthorizeView>