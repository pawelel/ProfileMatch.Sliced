@page "/admin/dashboard"
<AuthorizeView Roles="Admin">
    <Authorized>
        <MudText Typo="Typo.h5" Color="Color.Primary" Class="mb-4">@L["admindashboard"]</MudText>
        <MudTabs Elevation="1" Rounded="true" PanelClass="mt-6" DisableSliderAnimation="true">
            <MudTabPanel Text=@L["Users"]>
                <AdminPeopleList />
            </MudTabPanel>
            <MudTabPanel Text=@L["Departments"]>
                <AdminDepartmentList />
            </MudTabPanel>
            <MudTabPanel Text=@L["Closed Questions"]><AdminClosedQuestions /></MudTabPanel>
            <MudTabPanel Text=@L["Open Questions"]><AdminOpenQuestions /></MudTabPanel>
            <MudTabPanel Text=@L["Maintenance"]><AdminMaintenance /></MudTabPanel>

            
        </MudTabs>
    </Authorized>
    <NotAuthorized>
        <p>@L["You're not loggged in as Admin."]</p>
    </NotAuthorized>
</AuthorizeView>