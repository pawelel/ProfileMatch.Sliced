@page "/admin/dashboard"
<AuthorizeView Roles="Admin">
    <Authorized>
        <MudText Typo="Typo.h5" Color="Color.Primary" Class="mb-4">@L["admindashboard"]</MudText>
        <MudTabs Elevation="1" Rounded="true" PanelClass="mt-6">
            <MudTabPanel Text="Users">
                <AdminPeopleList />
            </MudTabPanel>
            <MudTabPanel Text="Administration"><Administration /></MudTabPanel>
            <MudTabPanel Text="Departments">
                <AdminDepartmentList />
            </MudTabPanel>
            <MudTabPanel Text="Statistics" Icon="@Icons.Material.Filled.Portrait">
            </MudTabPanel>
            <MudTabPanel Text="Categories"><AdminCategoryList /></MudTabPanel>
            <MudTabPanel Text="Questions"><AdminQuestionList /></MudTabPanel>
            <MudTabPanel Text="Cards"><AdminCards /></MudTabPanel>
        </MudTabs>
    </Authorized>
    <NotAuthorized>
        <p>You're not loggged in as Admin.</p>
    </NotAuthorized>
</AuthorizeView>