<MudTable Items="@UserNotesVM" T="UserAnswerVM" Dense="true" Hover="true" Bordered="false" Striped="false" Filter="new Func<UserAnswerVM,bool>(FilterFunc1)" @bind-SelectedItem="selectedItem1">
    <ToolBarContent>
        <MudText Typo="Typo.h6">@L["Open Questions"]</MudText>
        <MudSpacer />
        <MudTextField @bind-Value="searchString1" Placeholder=@L["Search"] Adornment="Adornment.Start" AdornmentIcon="@Icons.Material.Filled.Search" IconSize="Size.Medium" Class="mt-0"></MudTextField>
    </ToolBarContent>
    <ColGroup>
        <col />
        <col style="width: 60%;" />
        <col />
        <col />
    </ColGroup>
    <HeaderContent>
        <MudTh>@L["Name"]</MudTh>
        <MudTh>@L["Description"]</MudTh>
        <MudTh>@L["Answer"]</MudTh>
        <MudTh>@L["Actions"]</MudTh>
    </HeaderContent>
    <RowTemplate>
        <MudTd DataLabel=@L["Name"]>@context.OpenQuestionName</MudTd>
        <MudTd DataLabel=@L["Description"]>@context.OpenQuestionDescription</MudTd>
        <MudTd DataLabel=@L["Answer"]>@context.UserDescription</MudTd>
        <MudTd DataLabel=@L["Edit"]>
            <MudButton Variant="Variant.Outlined" Size="Size.Small" Style="color: var(--mud-palette-info-darken)!important; border-color: var(--mud-palette-info-darken)" OnClick="((e)=>UserNoteUpdate(context))">@L["Edit Answer"]</MudButton>
        </MudTd>
    </RowTemplate>
    <PagerContent>
        <MudTablePager RowsPerPageString=@L["Rows per page"] />
    </PagerContent>
</MudTable>
