@if (loading)
{
    <MudProgressCircular Color="Color.Default" Indeterminate="true" />
}
else
{
    <MudGrid Spacing="0" Class="d-flex justify-space-between">
    <MudItem xs="12" md="12">
    <MudText Typo="Typo.h6">@L["Closed Questions"]</MudText>
    </MudItem>        
         <MudItem xs="12" md="5">
            <MudSelect T="string" Label=@L["Select Category"] MultiSelection="true" OffsetY="true" @bind-SelectedValues="Cats">
                @foreach (var cat in categories)
                {
                    if (ShareResource.IsEn())
                    {
                    <MudSelectItem T="string" Value="@cat.Name" />
                    }else{
                        <MudSelectItem T="string" Value="@cat.NamePl" />
                    }
                }
            </MudSelect>
        </MudItem>
        <MudItem xs="12" md="5">
            <MudTextField Class="d-flex justify-end"
                      @bind-Value="searchString"
                      Placeholder=@L["Search"]
                      Adornment="Adornment.Start"
                      AdornmentIcon="@Icons.Material.Filled.Search"
                      IconSize="Size.Medium"
                      Immediate="true">
            </MudTextField>
        </MudItem>
    </MudGrid>
    <MudDataGrid Items="@QuestionUserLevelVMs()" T="QuestionUserLevelVM" Dense="true" Hover="true" Bordered="false" Striped="false" QuickFilter="@QuickFilter">
        <Columns>
            <Column T="QuestionUserLevelVM" Title=@L["Name"]>
                <CellTemplate>
                    @if (ShareResource.IsEn())
                {
                    @context.CategoryName
                }else{
                    @context.CategoryNamePl
                }
                </CellTemplate>
            </Column>   
            <Column T="QuestionUserLevelVM" Title=@L["Description"]>
                <CellTemplate>
                    @if (ShareResource.IsEn())
                {
                    @context.Description
                }else{
                    @context.DescriptionPl
                }
                </CellTemplate>
            </Column>   
            <Column T="QuestionUserLevelVM" Title=@L["Answer"]>
                <CellTemplate>
                    @context.Level
                </CellTemplate>
            </Column>   
            <Column T="QuestionUserLevelVM" Title=@L["Actions"]>
                <CellTemplate>
                    <MudButton Size="Size.Small" Variant="Variant.Outlined" Style="color: var(--mud-palette-info-darken)!important; border-color: var(--mud-palette-info-darken)" OnClick="@(()=>UserAnswerDialog(context))">@L["Edit Answer"]</MudButton>
                </CellTemplate>
            </Column>
        </Columns>
         <PagerContent>
            <MudDataGridPager T="QuestionUserLevelVM" RowsPerPageString=@L["Rows per page"] />
        </PagerContent>
    </MudDataGrid>
}
<style>
    .mud-tabs-panels {
        min-height: 200px !important;
    }

    .selected {
        background-color: #1E88E5 !important;
    }
</style>
