

<MudText Typo="Typo.h6">@L["Certificates"]</MudText>

<MudDataGrid Items="certificates">
    <Columns>
        <Column T="Certificate" Field="Name">
            <HeaderTemplate>
              @L["Cert name"] <MudButton @onclick="UpdateCert" Variant="Variant.Filled" Color="Color.Primary">@L["Edit Certificate"]</MudButton>
            </HeaderTemplate>
            <CellTemplate>
                @context.Name
            </CellTemplate>
        </Column>
    </Columns>
</MudDataGrid>
<MudTable Items="@certificates" MultiSelection="true" Dense="true" Hover="true" Bordered="false" Striped="false">
    <HeaderContent>
        <MudTh>@L["Cert name"]</MudTh>
        <MudTh>@L["Date of issue"]</MudTh>
        <MudTh>@L["File"]</MudTh>
        <MudTh>@L["Upload"]</MudTh>
    </HeaderContent>
    <RowTemplate>
       
        <MudTd DataLabel=@L["Cert name"]>@context.Name</MudTd>
        <MudTd DataLabel=@L["Date of issue"]>@context.DateCreated</MudTd>
        <MudTd DataLabel=@L["Date Valid To"]>@context.ValidToDate</MudTd>
        
        <MudTd DataLabel=@L["Edit"]>
            <MudButton @onclick="UpdateCert" Variant="Variant.Filled" Color="Color.Primary">@L["Edit Certificate"]</MudButton>
        </MudTd>
    </RowTemplate>
    <PagerContent>
        <MudTablePager RowsPerPageString=@L["Rows per page"] PageSizeOptions="new int[]{50, 100}" />
    </PagerContent>
    <FooterContent>
        <MudTd colspan="5">@L["Select All"]</MudTd>
    </FooterContent>
</MudTable>