<AuthorizeView>
    <Authorized>
        <MudCard Elevation="0" Square="true" Class="@Class" Style="@Style">
            <MudCardHeader>
                <CardHeaderAvatar>
                    <MudAvatar Image="@CurrentUser?.PhotoPath" />
                </CardHeaderAvatar>
                <CardHeaderContent>
                    <MudText Typo="Typo.body2">@CurrentUser?.FullName</MudText>
                    @if (ShareResource.IsEn())
                    {
                        <MudText Typo="Typo.caption">@CurrentUser?.Job?.Name</MudText>
                    }
                    else
                    {
                        <MudText Typo="Typo.caption">@CurrentUser?.Job?.NamePl</MudText>
                    }


                </CardHeaderContent>
            </MudCardHeader>
        </MudCard>
    </Authorized>
    <NotAuthorized></NotAuthorized>
</AuthorizeView>
