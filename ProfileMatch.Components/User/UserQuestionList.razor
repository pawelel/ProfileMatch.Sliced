@if (loading)
{
    <MudProgressCircular Color="Color.Default" Indeterminate="true" />
}
else
{

    <MudSelect T="string" Label=@L["Select Category"] MultiSelection="true" @bind-SelectedValues="Options">
        @foreach (var cat in categories)
        {
            <MudSelectItem T="string" Value="@cat.Name" />
        }
    </MudSelect>
    <MudItem xs="12" md="6">
        <MudText Typo="Typo.body2">@L["Selected Values"]:  @(string.Join(", ", Options.Select(x=>$"\"{x}\""))) </MudText>
    </MudItem>
    <MudTable Items="@(GetQuestions())" SortLabel=@L["Sort By"] Dense="true" Hover="true" Bordered="false" Striped="false" Breakpoint="Breakpoint.Sm" Filter="new Func<Question,bool>(FilterFunc1)">
        <ColGroup>
            <col />
            <col style="width: 60%;" />
            <col />
            <col />
        </ColGroup>
        <ToolBarContent>
            <MudText Typo="Typo.h6">@L["Questions Table"]</MudText>
            <MudSpacer />
            <MudTextField @bind-Value="searchString1" Placeholder=@L["Search"] Adornment="Adornment.Start" AdornmentIcon="@Icons.Material.Filled.Search" IconSize="Size.Medium" Class="mt-0"></MudTextField>
        </ToolBarContent>
        <HeaderContent>
            <MudTh><MudTableSortLabel SortBy="new Func<Question, object>(x=>x.Category.Name)">@L["Category"]</MudTableSortLabel></MudTh>
            <MudTh><MudTableSortLabel SortBy="new Func<Question, object>(x=>x.Name)">@L["Question"]</MudTableSortLabel></MudTh>
            <MudTh>@L["Level"]</MudTh>
            <MudTh>@L["Actions"]</MudTh>
        </HeaderContent>
        <RowTemplate>
            <MudTd DataLabel=@L["Category"]>@context.Category.Name</MudTd>
            <MudTd DataLabel=@L["Question"]>@context.Name</MudTd>
            <MudTd DataLabel=@L["Level"]>@(ShowLevel(context))</MudTd>
            <MudTd DataLabel=@L["Actions"]>
                <MudButton OnClick="@(()=>UserAnswerDialog(context))">@L["Edit Answer"]</MudButton>
            </MudTd>
        </RowTemplate>
        <PagerContent>
            <MudTablePager HidePagination="true" HorizontalAlignment="HorizontalAlignment.Right" Class="pl-2 pr-2"
                           PageSizeOptions="new int[] { 5, 10, 25, 50, 100 }" RowsPerPageString=@L["Rows per page"]
                           InfoFormat="{first_item}-{last_item} / {all_items}" />
        </PagerContent>
    </MudTable>
}
<style>
    .mud-tabs-panels {
        min-height: 200px !important;
    }
</style>