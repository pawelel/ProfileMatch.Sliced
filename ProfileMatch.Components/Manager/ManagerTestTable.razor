<MudTable Hover="true" Breakpoint="Breakpoint.Sm" Height="500px" FixedHeader="true"
          Items="@Elements"
          GroupBy="@_groupDefinition"
          GroupHeaderStyle="background-color:var(--mud-palette-background-grey)"
          GroupFooterClass="mb-4"
          Dense="true"
          MultiSelection="true">
    <ColGroup>
        <col style="width: 60%;" />
        <col />
        <col />
    </ColGroup>
    <HeaderContent>
        <MudTh>Question</MudTh>
        <MudTh>Level</MudTh>
        <MudTh>Full Name</MudTh>
    </HeaderContent>
    <GroupHeaderTemplate>
        <MudTh Class="mud-table-cell-custom-group" colspan="5">@($"{context.GroupName}: {context.Key}")</MudTh>
    </GroupHeaderTemplate>
    <RowTemplate>
        <MudTd DataLabel="Question">@context.QuestionName</MudTd>
        <MudTd DataLabel="Level">@context.Level</MudTd>
        <MudTd DataLabel="Sign">@context.FullName</MudTd>
    </RowTemplate>
    <GroupFooterTemplate>
        <MudTh Class="mud-table-cell-custom-group mud-table-cell-custom-group-footer" colspan="5">Total Points: @context.Items.Sum((e) => e.Level)</MudTh>
    </GroupFooterTemplate>
</MudTable>
