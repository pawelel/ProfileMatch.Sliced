@inject IStringLocalizer<LanguageService> L

<MudText Typo="Typo.h4" GutterBottom="true">@L["Sign Up"]</MudText>

<MudTextField T="string" Label=@L["Username"] Variant="Variant.Outlined" Class="my-4"></MudTextField>

<MudTextField T="string" Label="E-mail" Variant="Variant.Outlined"></MudTextField>

<MudTextField @bind-Value="@Password" Label=@L["Password"] Variant="Variant.Outlined" InputType="@PasswordInput" Adornment="Adornment.End" AdornmentIcon="@PasswordInputIcon" OnAdornmentClick="TogglePasswordVisibility" Class="mt-4" />

<MudButton Variant="Variant.Filled" Color="Color.Primary" Link="/pages/authentication/login" Size="Size.Large" FullWidth="true">@L["Register"]</MudButton>

    }
}