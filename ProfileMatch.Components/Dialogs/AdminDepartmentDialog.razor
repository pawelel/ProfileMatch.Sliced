<MudDialog>
    <DialogContent>
        <MudForm @ref="Form">
            <MudTextField T="string" @bind-Value="@TempName" Immediate="true" Label=@L["Department Name"]
                          Required="true" RequiredError=@L["Department name is required!"] />
            <MudTextField T="string" @bind-Value="@TempDescription" Immediate="true" Label=@L["Department Description"]
                          Lines="5" />
        </MudForm>
    </DialogContent>
    <DialogActions>
        <MudButton OnClick="Cancel">@L["Cancel"]</MudButton>
        <MudButton Color="Color.Error" OnClick="HandleSave">@L["Save"]</MudButton>
    </DialogActions>
</MudDialog>