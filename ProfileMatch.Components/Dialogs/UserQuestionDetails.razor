<MudDialog>
    <DialogContent>
        <MudItem Class="pt-8"></MudItem>
        <MudText Typo="Typo.h6">@Q.Category.Name:</MudText>
        <MudText Typo="Typo.h6">@Q.Name</MudText>

        <MudTabs Outlined="true"
                 Position="Position.Top"
                 Rounded="true"
                 Border="true"
                 ApplyEffectsToContainer="true"
                 PanelClass="pa-6 d-block">
            @foreach (var answerOption in Q.AnswerOptions)
            {
                <MudTabPanel Text="@answerOption.Level.ToString()">

                    <MudItem>
                        <MudText Typo="Typo.subtitle1">Level @answerOption.Level.ToString()</MudText>
                        <MudText Typo="Typo.subtitle2"
                                 @bind-Value="@answerOption.Description">@answerOption.Description</MudText>
                        @if (CanSelect(answerOption))
                        {
                                <MudButton Variant="Variant.Filled" OnClick="@(()=>SelectLevelAsync(UserId, answerOption.Id))" Color="Color.Tertiary" Size="Size.Small">This is my Level</MudButton>
                        }
                            </MudItem>

                        </MudTabPanel>
                    }
        </MudTabs>

    </DialogContent>
</MudDialog>

