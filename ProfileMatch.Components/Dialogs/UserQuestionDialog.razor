


<MudDialog>
    <DialogContent>
        <MudItem Class="pt-8"></MudItem>
        <MudTabs Outlined="true"
                 Position="Position.Top"
                 Rounded="true"
                 Border="true"
                 ApplyEffectsToContainer="true"
                 DisableSliderAnimation="true"
                 HideSlider="true"
                 PanelClass="pa-6 d-block">
            @foreach (var answerOption in Q.AnswerOptions)
            {                    
                <MudTabPanel Text="@answerOption.Level.ToString()">
                           <MudItem Style="height:200px;">
                        <MudText Typo="Typo.subtitle1">@L["Level"]@answerOption.Level.ToString()</MudText>
                        @if (ShareResource.IsEn())
                {
                        <MudText Typo="Typo.subtitle2"
                                 @bind-Value="@answerOption.Description">@answerOption.Description</MudText>
                }else{
                    <MudText Typo="Typo.subtitle2"
                                 @bind-Value="@answerOption.Description">@answerOption.DescriptionPl</MudText>
                }
                                @if (CanSelect(answerOption))
                                {
                                    <MudButton Style="color: var(--mud-palette-info-darken)!important; border-color: var(--mud-palette-info-darken)" Variant="Variant.Outlined" OnClick="@(()=>SelectLevelAsync(UserId, answerOption.Id, answerOption.ClosedQuestionId))" Size="Size.Small">@L["This is my Level"]</MudButton>
                                }
                            </MudItem>
                        </MudTabPanel>
                    }
        </MudTabs>
    </DialogContent>
</MudDialog>

<style>
    .mud-tab {
        min-width: 50px !important;
    }
    

.mud-tabs .mud-tabs-toolbar .mud-tooltip-root {
    border-right: 6px solid transparent;
    border-left: 6px solid transparent;
}


.mud-tab::before {/*::after is already used for ripple effect*/
    width: 0;
	content: "";
	position: absolute;
	bottom: 0;
	height: 2px;
	transition: width .2s cubic-bezier(.64,.09,.08,1);
}

.mud-tab.mud-tab-active::before {
	width: 50px !important;
	background: var(--mud-palette-primary);
}
  
</style>