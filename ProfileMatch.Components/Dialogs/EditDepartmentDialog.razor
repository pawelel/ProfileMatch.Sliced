<MudDialog>
    <TitleContent>
        <MudText Typo="Typo.h6">
            <MudIcon Icon="@Icons.Material.Filled.DeleteForever" Class="mr-3 mb-n1" />
            Edit Department
        </MudText>
    </TitleContent>
    <DialogContent>
        <MudForm @ref="Form" @bind-IsValid="@_success">
            <MudTextField T="string" @bind-Value="@Dep.Name" Immediate="true" Label="Project Name"
                          Required="true" RequiredError="Project name is required!" />
            <MudTextField T="string" @bind-Value="@Dep.Description" Immediate="true" Label="Project Description"
                          Lines="5" />
        </MudForm>
    </DialogContent>
    <DialogActions>
        <MudButton OnClick="Cancel">Cancel</MudButton>
        <MudButton Color="Color.Error" OnClick="HandleSave">Save</MudButton>
    </DialogActions>
</MudDialog>