
<InputFile id="fileInput" OnChange="@LoadSingleFile" hidden accept=".xlsx, .xls" />

<MudItem Class="pa-2" xs="12" sm="4" md="3">
            <MudCard>
                <MudCardContent>
                    <MudSelect T="string">
                        <MudSelectItem T="string" Value="@("Department")">@L["Department"]</MudSelectItem>
                        <MudSelectItem T="string" Value="@("ApplicationUser")">@L["User"]</MudSelectItem>
                        <MudSelectItem T="string" Value="@("AnswerOption")">@L["AnswerOption"]</MudSelectItem>
                        <MudSelectItem T="string" Value="@("Category")">@L["Category"]</MudSelectItem>
                    </MudSelect>
<MudButton HtmlTag="label"
           Variant="Variant.Filled"
           Color="Color.Inherit"
           StartIcon="@Icons.Custom.FileFormats.FileExcel"
           for="fileInput">
    @L["Upload File"]
</MudButton>
                </MudCardContent>
            </MudCard>
        </MudItem>