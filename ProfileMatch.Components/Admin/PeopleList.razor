
<MudSwitch @bind-Checked="@_dense" Color="Color.Secondary">Dense</MudSwitch>
<MudButton Link="/admin/edituser" Class="pa-2 mx-2" Variant="Variant.Filled" Color="Color.Primary">Add New</MudButton>
@if (Users == null)
{
    <MudProgressLinear Color="Color.Primary" Indeterminate="true" Class="my-7" />
}
else
{
    <MudTable Items="@Users" Dense="@_dense" Filter="new Func<EditUserVM,bool>(FilterFunc1)" SortLabel="Sort By">
        <ToolBarContent>
            <MudText Typo="Typo.h6">People Administration</MudText>
            <MudSpacer />

            <MudTextField @bind-Value="SearchString" Placeholder="Search" Adornment="Adornment.Start" AdornmentIcon="@Icons.Material.Filled.Search" IconSize="Size.Medium" Class="mt-0"></MudTextField>
        </ToolBarContent>
        <HeaderContent>
            <MudTh><MudTableSortLabel SortBy="new Func<EditUserVM, object>(x=>x.Department.Name)" SortLabel="Department" T="EditUserVM">Department</MudTableSortLabel></MudTh>
            <MudTh>Photo</MudTh>
            <MudTh><MudTableSortLabel SortBy="new Func<EditUserVM, object>(x=>x.FirstName)" SortLabel="First Name" T="EditUserVM">First Name</MudTableSortLabel></MudTh>
            <MudTh><MudTableSortLabel SortBy="new Func<EditUserVM, object>(x=>x.LastName)" SortLabel="Last Name" T="EditUserVM">Last Name</MudTableSortLabel></MudTh>
            <MudTh><MudTableSortLabel SortBy="new Func<EditUserVM, object>(x=>x.DateOfBirth)" SortLabel="Date Of Birth" T="EditUserVM">Birth Date</MudTableSortLabel></MudTh>
            <MudTh><MudTableSortLabel SortBy="new Func<EditUserVM, object>(x=>x.IsActive)" SortLabel="Is Active" T="EditUserVM">Is Active</MudTableSortLabel></MudTh>
            <MudTh><MudSwitch @bind-Checked="@disabled" Color="Color.Secondary">Edit</MudSwitch></MudTh>
            <MudTh>Profile</MudTh>
        </HeaderContent>
        <RowTemplate>
            <MudTd DataLabel="Department">@(context.Department==null? "unassigned" : context.Department.Name)</MudTd>
            <MudTd DataLabel="Photo"><MudAvatar Image="@context.PhotoPath" Size="Size.Large" /></MudTd>
            <MudTd DataLabel="First Name">@context.FirstName</MudTd>
            <MudTd DataLabel="Last Name">@context.LastName</MudTd>
            <MudTd DataLabel="Date Of Birth">@context.DateOfBirth</MudTd>
            <MudTd DataLabel="Is Active"><MudCheckBox Disabled="true" @bind-Checked="@context.IsActive"></MudCheckBox></MudTd>
            <MudTd DataLabel="">
                <MudFab Color="Color.Primary" OnClick="@(()=> EditProfile(context.Id))" Disabled="@(!disabled)" Icon="@Icons.Material.Filled.Edit" Size="Size.Small" IconSize="Size.Small" />
            </MudTd>
            <MudTd DataLabel="">
                <MudFab OnClick="@(()=> ShowProfile(context.Id))" Color="Color.Primary" Icon="@Icons.Material.Filled.Person" Size="Size.Small" IconSize="Size.Small" />
            </MudTd>
        </RowTemplate>
        <PagerContent>
            <MudTablePager RowsPerPageString="Next people" />
        </PagerContent>
    </MudTable>

}