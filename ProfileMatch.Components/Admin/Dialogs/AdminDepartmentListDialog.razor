@if (_loading)
{
    <MudProgressLinear Color="Color.Primary" Indeterminate="true" />
}
else
{
    <MudDataGrid MultiSelection="true" Items="@_departments" Sortable="true" Filterable="true" QuickFilter="@QuickFilter">
        <ToolBarContent>
            <MudText Typo="Typo.h6">Periodic Departments</MudText>
            <MudSpacer />
            <MudTextField @bind-Value="_searchString" Placeholder="Search" Adornment="Adornment.Start" Immediate="true"
                      AdornmentIcon="@Icons.Material.Filled.Search" IconSize="Size.Medium" Class="mt-0"></MudTextField>
        </ToolBarContent>
        <Columns>
            <Column T="Department" Field="Name" Title="Name">
                <CellTemplate>
                  <MudIconButton Color="Color.Primary" OnClick="@(()=> DepartmentUpdate(context))" Icon="@Icons.Outlined.Settings" Size="Size.Small" Variant="Variant.Outlined" />  @context.Name
                </CellTemplate>
            </Column>
            <Column T="Department" Field="NamePl" Title="NamePl"/>
            <Column T="Department" Field="Description" Title="Description"/>
            <Column T="Department" Field="DescriptionPl" Title="DescriptionPl"/>
        </Columns>
        <PagerContent>
            <MudDataGridPager T="Department" />
        </PagerContent>
    </MudDataGrid>
}