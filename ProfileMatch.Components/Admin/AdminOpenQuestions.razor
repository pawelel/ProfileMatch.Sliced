<MudGrid Spacing="0" Class="d-flex justify-space-between">
    <MudItem xs="12" md="5">
        <MudText Typo="Typo.h6">@L["Open Questions"]</MudText>
    </MudItem>
    <MudItem xs="12" md="5">
        <MudTextField Class="d-flex justify-end"
                      @bind-Value="_searchString1"
                      Placeholder=@L["Search"]
                      Adornment="Adornment.Start"
                      Immediate="true"
                      AdornmentIcon="@Icons.Material.Filled.Search"
                      IconSize="Size.Medium"></MudTextField>
    </MudItem>
</MudGrid>
 @if (_openQuestions is not null || _openQuestions.Count != 0)
{
    @if (ShareResource.IsEn())
    {
        <MudTable Items="@_openQuestions" Dense="true" Hover="true" Bordered="false" Striped="false" Filter="new Func<OpenQuestion,bool>(FilterFunc1)" @bind-SelectedItem="_selectedItem1">
            <ToolBarContent>
                <MudButton Variant=Variant.Outlined Size="Size.Small" Color="Color.Primary" OnClick="(()=>OpenQuestionUpdate())">@L["Add New"]</MudButton>
                <MudSpacer />
            </ToolBarContent>
            <ColGroup>
                <col />
                <col />
            </ColGroup>
            <HeaderContent>
                <MudTh>@L["Name"]</MudTh>
                <MudTh>@L["Description"]</MudTh>
            </HeaderContent>
            <RowTemplate>
                <MudTd DataLabel=@L["Name"]><MudIconButton Color="Color.Primary" OnClick="((e)=>OpenQuestionUpdate(context))" Icon="@Icons.Outlined.Settings" Size="Size.Small" Variant="Variant.Outlined" />@context.Name</MudTd>
                <MudTd DataLabel=@L["Description"]>@context.Description</MudTd>
            </RowTemplate>
            <PagerContent>
                <MudTablePager RowsPerPageString=@L["Rows per page"] />
            </PagerContent>
        </MudTable>
    }
    else
    {
        <MudTable Items="@_openQuestions" Dense="true" Hover="true" Bordered="false" Striped="false" Filter="new Func<OpenQuestion,bool>(FilterFunc1)" @bind-SelectedItem="_selectedItem1">
            <ToolBarContent>
                <MudButton Variant=Variant.Outlined Size="Size.Small" Color="Color.Primary" OnClick="(()=>OpenQuestionUpdate())">@L["Add New"]</MudButton>
                <MudSpacer />
            </ToolBarContent>
            <HeaderContent>
                <MudTh>@L["Name"]</MudTh>
                <MudTh>@L["Description"]</MudTh>
            </HeaderContent>
            <RowTemplate>
                <MudTd DataLabel=@L["Name"]><MudIconButton Color="Color.Primary" OnClick="((e)=>OpenQuestionUpdate(context))" Icon="@Icons.Outlined.Settings" Size="Size.Small" Variant="Variant.Outlined" />@context.NamePl</MudTd>
            </RowTemplate>
            <PagerContent>
                <MudTablePager RowsPerPageString=@L["Rows per page"] />
            </PagerContent>
        </MudTable>
    }
}
else
{
    <MudProgressLinear Color="Color.Primary" Indeterminate="true" />
}