<MudDialogProvider FullWidth="true"
                   CloseButton="true"
                   DisableBackdropClick="true"
                   NoHeader="false"
                   Position="DialogPosition.Center" />
<MudSnackbarProvider />
<MudThemeProvider Theme="_currentTheme" @bind-IsDarkMode="@_isDarkTheme" />

<MudAppBar Elevation="4">
    @if (_isDarkTheme)
    {
        <MudIconButton Class="darkSwitch" OnClick="@(()=>ChangeTheme())" Icon="@Icons.Outlined.LightMode" Style="@($"color:{Colors.Amber.Darken1};")" />
    }
    else
    {
        <MudIconButton Class="darkSwitch" OnClick="@(()=>ChangeTheme())" Icon="@Icons.Outlined.Nightlight" Color="Color.Inherit" />
    }

</MudAppBar>
